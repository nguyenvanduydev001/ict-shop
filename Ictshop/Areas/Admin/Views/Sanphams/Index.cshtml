@model IEnumerable<Ictshop.Models.Sanpham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-primary my-4">Danh sách sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới sản phẩm", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Hangsanxuat.Tenhang)</th>
            <th>@Html.DisplayNameFor(model => model.Hedieuhanh.Tenhdh)</th>
            <th>@Html.DisplayNameFor(model => model.Tensp)</th>
            <th>@Html.DisplayNameFor(model => model.Giatien)</th>
            <th>@Html.DisplayNameFor(model => model.Soluong)</th>
            <th>@Html.DisplayNameFor(model => model.Mota)</th>
            <th>@Html.DisplayNameFor(model => model.Thesim)</th>
            <th>@Html.DisplayNameFor(model => model.Bonhotrong)</th>
            <th>@Html.DisplayNameFor(model => model.Sanphammoi)</th>
            <th>@Html.DisplayNameFor(model => model.Ram)</th>
            <th>@Html.DisplayNameFor(model => model.Anhbia)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Hangsanxuat.Tenhang)</td>
                <td>@Html.DisplayFor(modelItem => item.Hedieuhanh.Tenhdh)</td>
                <td>@Html.DisplayFor(modelItem => item.Tensp)</td>
                <td>@String.Format("{0:0,0}", item.Giatien) VNĐ</td>
                <td>@Html.DisplayFor(modelItem => item.Soluong)</td>
                <td>@Html.DisplayFor(modelItem => item.Mota)</td>
                <td>@Html.DisplayFor(modelItem => item.Thesim)</td>
                <td>@Html.DisplayFor(modelItem => item.Bonhotrong)</td>
                <td>@Html.DisplayFor(modelItem => item.Sanphammoi)</td>
                <td>@Html.DisplayFor(modelItem => item.Ram)</td>
                <td>
                    <img src="@Url.Content(item.Anhbia)" alt="Ảnh bìa" class="img-thumbnail" style="width: 50px; height: 50px;" />
                </td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Masp }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Masp }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Masp }, new { @class = "btn btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Custom styles for the page */

    h2.text-center.text-primary {
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody + tbody {
            border-top: 2px solid #dee2e6;
        }

        .table .table {
            background-color: #fff;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .table-hover tbody tr:hover {
        color: #212529;
        background-color: rgba(0, 0, 0, 0.075);
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #dee2e6;
        }

        .table-bordered thead th,
        .table-bordered thead td {
            border-bottom-width: 2px;
        }

    a.btn {
        color: white !important;
        text-decoration: none;
    }

        a.btn:hover {
            color: white !important;
        }

    .btn-group .btn {
        margin-right: 5px;
    }
</style>
