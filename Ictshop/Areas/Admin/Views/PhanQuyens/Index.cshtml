@model IEnumerable<Ictshop.Models.PhanQuyen>

@{
    ViewBag.Title = "Quản lý phân quyền";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quyền truy cập</h2>

<p>
    @Html.ActionLink("Thêm mới quyền", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên Quyền</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IDQuyen)</td>
                <td>@Html.DisplayFor(modelItem => item.TenQuyen)</td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDQuyen }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDQuyen }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.IDQuyen }, new { @class = "btn btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
