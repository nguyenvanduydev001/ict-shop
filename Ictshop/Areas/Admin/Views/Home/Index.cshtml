@model PagedList.IPagedList<Ictshop.Models.Sanpham>

@using PagedList.Mvc;


@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý sản phẩm </h2>

<p>
    <button class="btn-default" style="color:white">@Html.ActionLink("Thêm mới", "Create")</button>
</p>
<table class="table table-bordered">
    <tr>

        <th>
            Tên sản phẩm
        </th>
        <th>
            Giá tiền
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Thẻ sim
        </th>
        <th>
            Ảnh bìa
        </th>
        <th>
            Tên hãng
        </th>
        <th>
            Hệ điều hành
        </th>
        <th>
            Thao tác
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Tensp)
    </td>
    <td>
        @String.Format("{0:0,0}", item.Giatien) VNĐ
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Soluong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Mota)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Thesim)
    </td>
    <td>
        <img src="@Url.Content("~" +item.Anhbia)" width="50" height="50" />
        @*@Html.DisplayFor(modelItem => item.Anhbia)*@
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hangsanxuat.Tenhang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hedieuhanh.Tenhdh)
    </td>
    <td style="width: 220px">
        @Html.ActionLink("Sửa", "Edit", new { id = item.Masp }, new { @class = "btn btn-success", style = "color:white; text-decoration:none; margin-bottom:4px;" })
        @Html.ActionLink("Chi tiết", "Details", new { id = item.Masp }, new { @class = "btn btn-primary", style = "color:white; text-decoration:none; margin-bottom:4px;" })
        @Html.ActionLink("Xóa", "Delete", new { id = item.Masp }, new { @class = "btn btn-danger", style = "color:white; text-decoration:none; margin-bottom:4px;" })
    </td>

</tr>
    }

</table>
<!-- Thêm mã phân trang -->
<br />

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page }))

<!-- Kết thúc -->

<style>
    .btn-default {
        background-color: #007bff; 
        color: white; 
        border: none; 
        padding: 10px 20px; 
        text-align: center; 
        text-decoration: none; 
        display: inline-block;
        font-size: 16px; 
        cursor: pointer; 
        border-radius: 5px; 
    }
        .btn-default a {
            color: white;
            text-decoration: none;
        }

        .btn-default:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }
    
</style>
