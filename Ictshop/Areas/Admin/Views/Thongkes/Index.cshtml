@model IEnumerable<Ictshop.Models.Thongke>

@{
    ViewBag.Title = "Thống kê mua hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />

<center><h2 class="text-danger">Top 5 khách hàng mua hàng nhiều nhất</h2></center>
<br />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên khách hàng</th>
            <th>Số điện thoại</th>
            <th>Tổng tiền đã mua</th>
            <th>Số lượng đơn hàng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Tennguoidung)</td>
                <td>@Html.DisplayFor(modelItem => item.Dienthoai)</td>
                <td>@String.Format("{0:0,0}", item.Tongtien) VNĐ</td>
                <td>@Html.DisplayFor(modelItem => item.Soluong)</td>
            </tr>
        }
    </tbody>
</table>
