@model IEnumerable<Ictshop.Models.Hangsanxuat>

@{
    ViewBag.Title = "Quảng lý hãng sản xuất";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý hãng điện thoại</h2>

<p>
    @Html.ActionLink("Thêm mới hãng", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Mã hãng
            </th>
            <th>
                Tên hãng
            </th>
            <th>
                Thao tác
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mahang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tenhang)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Mahang }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Mahang }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Mahang }, new { @class = "btn btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

