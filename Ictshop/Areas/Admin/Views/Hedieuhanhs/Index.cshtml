@model IEnumerable<Ictshop.Models.Hedieuhanh>

@{
    ViewBag.Title = "Quản lý hệ điều hành";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý hệ điều hành</h2>

<p>
    @Html.ActionLink("Thêm mới hệ điều hành", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered ">
    <thead>
        <tr>
            <th>Mã hệ điều hành</th>
            <th>Tên hệ điều hành</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Mahdh)</td>
                <td>@Html.DisplayFor(modelItem => item.Tenhdh)</td>
                <td>
                    <div class="btn-group " role="group">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Mahdh }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Mahdh }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Mahdh }, new { @class = "btn btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
